<%- include('partials/header') %>
<%- include('partials/navbar') %>

<section class="auth-section section">
  <div class="container">
    <div class="auth-container">
      <h1>Create Your Account</h1>
      <p class="auth-subtitle">Join thousands of adventurers exploring with Tourzio</p>

      <% if (errors.length > 0) { %>
        <div class="alert alert-error">
          <% errors.forEach(error => { %>
            <p><%= error.msg %></p>
          <% }) %>
        </div>
      <% } %>

      <form action="/auth/signup" method="POST" class="auth-form">
        <div class="form-group">
          <label for="name">Full Name:</label>
          <input type="text" id="name" name="name" required>
        </div>

        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required minlength="6">
          <small>Must be at least 6 characters</small>
        </div>

        <div class="form-group">
          <label for="phone">Phone (Optional):</label>
          <input type="tel" id="phone" name="phone">
        </div>

        <div class="form-group checkbox-group">
          <input type="checkbox" id="isStudent" name="isStudent">
          <label for="isStudent">I am a student (Get 10% extra discount!)</label>
        </div>

        <button type="submit" class="btn-primary btn-large">Sign Up</button>
      </form>

      <p class="auth-switch">
        Already have an account? <a href="/auth/login">Login</a>
      </p>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
