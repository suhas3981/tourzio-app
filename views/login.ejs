<%- include('partials/header') %>
<%- include('partials/navbar') %>

<section class="auth-section section">
  <div class="container">
    <div class="auth-container">
      <h1>Welcome Back</h1>
      <p class="auth-subtitle">Login to manage your bookings and track your favorite packages</p>

      <% if (errors.length > 0) { %>
        <div class="alert alert-error">
          <% errors.forEach(error => { %>
            <p><%= error.msg %></p>
          <% }) %>
        </div>
      <% } %>

      <form action="/auth/login" method="POST" class="auth-form">
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required>
        </div>

        <button type="submit" class="btn-primary btn-large">Login</button>
      </form>

      <p class="auth-switch">
        Don't have an account? <a href="/auth/signup">Sign up</a>
      </p>

      <div class="demo-credentials">
        <p><strong>Demo Credentials:</strong></p>
        <p>Email: demo@tourzio.com</p>
        <p>Password: Demo1234</p>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
